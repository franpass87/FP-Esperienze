{
    "name": "franpass87/fp-esperienze",
    "description": "WordPress plugin for experience booking management",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Francesco Passeri",
            "email": "francesco@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "dompdf/dompdf": "^2.0",
        "chillerlan/php-qrcode": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "FP\\Esperienze\\": "includes/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "php-stubs/wordpress-stubs": "^6.5",
        "php-stubs/woocommerce-stubs": "^8.0",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse --debug",
        "phpcs": "php -d memory_limit=512M vendor/bin/phpcs --standard=phpcs.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1",
        "phpcbf": "php -d memory_limit=512M vendor/bin/phpcbf --standard=phpcs.xml",
        "phpunit": "vendor/bin/phpunit",
        "build-admin-css": "php scripts/build-admin-styles.php",
        "build": [
            "@build-admin-css"
        ],
        "test": [
            "@phpstan",
            "@phpcs",
            "@phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "process-timeout": 0
    }
}
