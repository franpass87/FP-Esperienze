{
    "name": "franpass87/fp-esperienze",
    "description": "WordPress plugin for experience booking management",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Francesco Passeri",
            "email": "francesco@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "dompdf/dompdf": "^2.0",
        "chillerlan/php-qrcode": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "FP\\Esperienze\\": "includes/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/",
        "test": [
            "@phpstan",
            "@phpcs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
